---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import LanguageSwitcher from '@/components/LanguageSwitcher';
import logo from '@/assets/patio.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
  { name: t('nav.home'), href: getRelativeLocaleUrl(lang, '') },
  { name: t('nav.curriculum'), href: getRelativeLocaleUrl(lang, 'international-subjects') },
  { name: t('nav.competition'), href: getRelativeLocaleUrl(lang, 'competitions') },
  { name: t('nav.fulltime'), href: getRelativeLocaleUrl(lang, 'fulltime') },
  { name: t('nav.oxbridge'), href: getRelativeLocaleUrl(lang, 'oxbridge') },
  { name: t('nav.about'), href: getRelativeLocaleUrl(lang, 'about') }
];

const currentPath = Astro.url.pathname;
---

<header class="bg-blue-900 text-white shadow-md fixed top-0 left-0 right-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="navbar px-0 min-h-20 flex-nowrap">
      <div class="navbar-start gap-0 flex-1 min-w-0 items-center">
        <details class="dropdown lg:hidden">
          <summary class="btn btn-ghost">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </summary>
          <ul class="dropdown-content menu bg-base-100 w-52 p-2 shadow border border-base-300">
            {navItems.map(item => (
              <li>
                <a
                  href={item.href}
                  class={`px-3 py-2 ${currentPath === item.href ? 'nav-active text-white' : ''}`}
                >
                  {item.name}
                </a>
              </li>
            ))}
          </ul>
        </details>
        <a href={getRelativeLocaleUrl(lang, '')} class="btn btn-ghost px-0 hover:bg-transparent">
          <img src={logo.src} alt={t('brand.name')} class="h-10 w-auto object-cover rounded logo-white" loading="lazy" />
        </a>
        <ul class="menu menu-horizontal px-1 gap-2 text-base hidden lg:flex flex-nowrap">
          {navItems.map(item => (
            <li>
              <a
                href={item.href}
                class={`transition-colors ${
                  currentPath === item.href ? 'nav-active text-white font-semibold' : 'text-white hover:bg-blue-800/70'
                }`}
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="navbar-end gap-4 flex-shrink-0">
        <LanguageSwitcher currentLang={lang} currentPath={currentPath} client:load />
        <a href={getRelativeLocaleUrl(lang, 'contact')} class="btn btn-primary">
          {t('nav.cta')}
        </a>
      </div>
    </div>
  </div>
</header>
