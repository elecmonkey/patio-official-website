---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import LanguageSwitcher from '@/components/LanguageSwitcher';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
  { name: t('nav.home'), href: getRelativeLocaleUrl(lang, '') },
  { name: t('nav.courses'), href: getRelativeLocaleUrl(lang, 'courses') },
  { name: t('nav.solutions'), href: getRelativeLocaleUrl(lang, 'solutions') },
  { name: t('nav.cases'), href: getRelativeLocaleUrl(lang, 'cases') },
  { name: t('nav.about'), href: getRelativeLocaleUrl(lang, 'about') }
];

const currentPath = Astro.url.pathname;
---

<header class="bg-base-100 shadow-md fixed top-0 left-0 right-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="navbar px-0 min-h-20 flex-nowrap">
      <div class="navbar-start gap-4 flex-1 min-w-0 items-center">
        <details class="dropdown lg:hidden">
          <summary class="btn btn-ghost">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </summary>
          <ul class="dropdown-content menu bg-base-100 w-52 p-2 shadow border border-base-300">
            {navItems.map(item => (
              <li>
                <a
                  href={item.href}
                  class={currentPath === item.href ? 'menu-active' : ''}
                >
                  {item.name}
                </a>
              </li>
            ))}
            <li class="border-t border-base-300 mt-2 pt-2">
              <a href="tel:000-000-0000" class="text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                {t('nav.phone')}
              </a>
            </li>
          </ul>
        </details>
        <a href={getRelativeLocaleUrl(lang, '')} class="btn btn-ghost text-2xl gap-2 hover:bg-transparent">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          Training
        </a>
        <ul class="menu menu-horizontal px-1 gap-2 text-base hidden lg:flex flex-nowrap">
          {navItems.map(item => (
            <li>
              <a
                href={item.href}
                class={`px-3 ${currentPath === item.href ? 'menu-active' : ''}`}
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="navbar-end gap-4 flex-shrink-0">
        <div class="flex items-center gap-2">
          <LanguageSwitcher currentLang={lang} currentPath={currentPath} client:load />
          <a href="tel:000-000-0000" class="btn btn-ghost gap-2 hidden sm:inline-flex">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="hidden md:inline">{t('nav.phone')}</span>
          </a>
        </div>
        <a href={getRelativeLocaleUrl(lang, 'contact')} class="btn btn-primary">
          {t('nav.contact')}
        </a>
      </div>
    </div>
  </div>
</header>
