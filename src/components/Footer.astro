---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import wechatQR from '@/assets/wechat-qrcode.jpg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// 页脚组件 - 模仿微软布局风格
const currentYear = new Date().getFullYear();

const curriculumLinks = [
  { name: t('nav.curriculum'), href: getRelativeLocaleUrl(lang, 'curriculum') },
  { name: t('nav.fulltime'), href: getRelativeLocaleUrl(lang, 'fulltime') },
  { name: t('nav.competition'), href: getRelativeLocaleUrl(lang, 'competitions') }
];

const serviceLinks = [
  { name: t('nav.oxbridge'), href: getRelativeLocaleUrl(lang, 'oxbridge') },
  { name: t('nav.cta'), href: getRelativeLocaleUrl(lang, 'contact') },
  { name: t('nav.about'), href: getRelativeLocaleUrl(lang, 'about') }
];

const contactInfo = [
  {
    icon: 'phone',
    label: t('contact.info.phone'),
    value: t('contact.info.phoneValue'),
    href: 'tel:000-000-0000'
  },
  {
    icon: 'wechat',
    label: t('contact.info.wechat'),
    value: t('contact.info.wechatValue'),
    image: wechatQR
  },
  {
    icon: 'location',
    label: t('about.contact.addressLabel'),
    value: t('footer.address.detail')
  }
];
---

<!-- 主要页脚区域 -->
<footer class="bg-base-200 text-base-content">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <nav>
        <h6 class="font-semibold text-sm mb-4">{t('footer.column.curriculum')}</h6>
        <ul class="space-y-3">
          {curriculumLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm opacity-70 hover:opacity-100 hover:underline transition-opacity">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <nav>
        <h6 class="font-semibold text-sm mb-4">{t('footer.column.services')}</h6>
        <ul class="space-y-3">
          {serviceLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm opacity-70 hover:opacity-100 hover:underline transition-opacity">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <div>
        <h6 class="font-semibold text-sm mb-4">{t('footer.column.contact')}</h6>
        <ul class="space-y-3 text-sm opacity-80">
          {contactInfo.map((info) => (
            <li class="flex items-start gap-2">
              {info.icon === 'phone' ? (
                <svg class="w-4 h-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.6" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              ) : info.icon === 'wechat' ? (
                <svg class="w-4 h-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.6" d="M9.75 9a1.25 1.25 0 11-2.5 0 1.25 1.25 0 012.5 0zM16.75 9a1.25 1.25 0 11-2.5 0 1.25 1.25 0 012.5 0z"></path>
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.6" d="M5 17l-2 2 2.5-.5A8.97 8.97 0 009 19c4.97 0 9-3.582 9-8s-4.03-8-9-8-9 3.582-9 8c0 2.166.873 4.137 2.322 5.612"></path>
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.6" d="M18.5 10c2.485 0 4.5 1.91 4.5 4.267 0 1.15-.47 2.206-1.24 3.007L22 20l-2.5-.5C18.662 19.811 17.857 20 17 20c-.84 0-1.64-.148-2.375-.42"></path>
                </svg>
              ) : (
                <svg class="w-4 h-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.6" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.6" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              )}
              {info.icon === 'wechat' ? (
                <div class="dropdown dropdown-hover dropdown-top">
                  <div tabindex="0" role="button" class="link link-hover">
                    {info.label}：{info.value}
                  </div>
                  <div class="dropdown-content mt-2 bg-base-100 p-3 shadow-lg border border-base-200 rounded-box">
                    <img
                      src={info.image?.src}
                      alt={`${info.label} QR`}
                      class="w-40 h-40 object-contain rounded"
                      loading="lazy"
                    />
                  </div>
                </div>
              ) : info.href ? (
                <a href={info.href} class="hover:underline">
                  {info.label}：{info.value}
                </a>
              ) : (
                <span>{info.label}：{info.value}</span>
              )}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</footer>

<!-- 底部版权区域 -->
<footer class="bg-base-200 text-base-content border-t border-base-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="flex items-center gap-6 text-xs opacity-60">
        <span>{t('brand.name')}</span>
        <a href="tel:000-000-0000" class="hover:underline">{t('footer.contactPhone')}</a>
      </div>
      <div class="text-xs opacity-60">
        © {currentYear} {t('brand.name')}. {t('footer.copyright')}
      </div>
    </div>
  </div>
</footer>
