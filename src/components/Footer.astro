---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import wechatQR from '@/assets/wechat-qrcode.jpg';
import wechatLogo from '@/assets/out/wechat-logo.svg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const programHighlights = [
  {
    title: t('footer.programs.curriculum.title'),
    description: t('footer.programs.curriculum.desc'),
    href: getRelativeLocaleUrl(lang, 'international-subjects')
  },
  {
    title: t('footer.programs.fulltime.title'),
    description: t('footer.programs.fulltime.desc'),
    href: getRelativeLocaleUrl(lang, 'fulltime')
  },
  {
    title: t('footer.programs.competition.title'),
    description: t('footer.programs.competition.desc'),
    href: getRelativeLocaleUrl(lang, 'competitions')
  }
];

const planningHighlights = [
  {
    title: t('footer.planning.oxbridge.title'),
    description: t('footer.planning.oxbridge.desc'),
    href: getRelativeLocaleUrl(lang, 'oxbridge')
  },
  {
    title: t('footer.planning.consult.title'),
    description: t('footer.planning.consult.desc'),
    href: getRelativeLocaleUrl(lang, 'contact')
  },
  {
    title: t('footer.planning.about.title'),
    description: t('footer.planning.about.desc'),
    href: getRelativeLocaleUrl(lang, 'about')
  }
];

const contactInfo = [
  {
    icon: 'phone',
    label: t('contact.info.phone'),
    value: t('contact.info.phoneValue'),
    href: 'tel:18061256544'
  },
  {
    icon: 'wechat',
    label: t('contact.info.wechat'),
    value: t('contact.info.wechatValue'),
    image: wechatQR
  },
  {
    icon: 'location',
    value: t('footer.address.detail')
  }
];
---

<!-- 主要页脚区域 -->
<footer class="bg-base-200 text-base-content">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <nav>
        <h6 class="font-semibold text-sm mb-4">{t('footer.column.curriculum')}</h6>
        <ul class="space-y-4">
          {programHighlights.map((item) => (
            <li>
              <a href={item.href} class="group block">
                <p class="text-sm font-semibold opacity-80 group-hover:opacity-100 transition-opacity">
                  {item.title}
                </p>
                <p class="mt-1 text-xs opacity-60 group-hover:opacity-80 leading-relaxed transition-opacity">
                  {item.description}
                </p>
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <nav>
        <h6 class="font-semibold text-sm mb-4">{t('footer.column.services')}</h6>
        <ul class="space-y-4">
          {planningHighlights.map((item) => (
            <li>
              <a href={item.href} class="group block">
                <p class="text-sm font-semibold opacity-80 group-hover:opacity-100 transition-opacity">
                  {item.title}
                </p>
                <p class="mt-1 text-xs opacity-60 group-hover:opacity-80 leading-relaxed transition-opacity">
                  {item.description}
                </p>
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <div>
        <h6 class="font-semibold text-sm mb-4">{t('footer.column.contact')}</h6>
        <ul class="space-y-3 text-sm opacity-80">
          {contactInfo.map((info) => (
            <li class="flex items-start gap-2">
              {info.icon === 'phone' ? (
                <svg class="w-4 h-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.6" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              ) : info.icon === 'wechat' ? (
                <img src={wechatLogo.src} alt={info.label ?? 'WeChat'} class="w-4 h-4 mt-1 object-contain" loading="lazy" />
              ) : (
                <svg class="w-4 h-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.6" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.6" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              )}
              {info.icon === 'wechat' ? (
                <div class="dropdown dropdown-hover dropdown-top">
                  <div tabindex="0" role="button" class="link link-hover">
                    {info.label}：{info.value}
                  </div>
                  <div class="dropdown-content mt-2 bg-base-100 p-3 shadow-lg border border-base-200 rounded-box">
                    <img
                      src={info.image?.src}
                      alt={`${info.label} QR`}
                      class="w-40 h-40 object-contain rounded"
                      loading="lazy"
                    />
                  </div>
                </div>
              ) : info.href ? (
                <a href={info.href} class="hover:underline">
                  {info.label}：{info.value}
                </a>
              ) : (
                <span>{info.value}</span>
              )}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</footer>

<!-- 底部版权区域 -->
<footer class="bg-base-200 text-base-content border-t border-base-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="flex items-center gap-6 text-xs opacity-60">
        <span>{t('brand.name')}</span>
        <a href="https://beian.miit.gov.cn/" target="_blank" rel="noreferrer" class="hover:underline">
          {t('footer.icp')}
        </a>
      </div>
      <div class="text-xs opacity-60">
        © 2022<span id="footer-year-range">-present</span> {t('brand.name')}. {t('footer.copyright')}
      </div>
    </div>
  </div>
</footer>

<script is:inline>
  (() => {
    const launchYear = 2022;
    const run = () => {
      const span = document.getElementById('footer-year-range');
      if (!span) return;
      const now = new Date().getFullYear();
      if (Number.isFinite(now) && now > launchYear) {
        span.textContent = `-${now}`;
      } else {
        span.textContent = '';
      }
    };
    document.addEventListener('astro:after-swap', run);
    run();
  })();
</script>
