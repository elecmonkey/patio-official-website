---
import Layout from '@/layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import oxbridgeBannerZh from '@/assets/banner/oxbridge-banner.jpg';
import oxbridgeBannerEn from '@/assets/banner/oxbridge-banner.jpg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const brand = lang === 'en' ? 'Patio Academy' : '攀梯国际';
const heroBanner = lang === 'en' ? oxbridgeBannerEn.src : oxbridgeBannerZh.src;
const heroAlt = t('oxbridge.hero.title');

const painPoints = t('home.oxbridge.pains.items').split('｜');
const services = t('oxbridge.services.items').split('｜');
const timeline = t('oxbridge.timeline.steps').split('｜');
const g5Universities = [
  {
    key: 'oxford',
    name: t('oxbridge.g5.oxford.name'),
    stats: [
      t('oxbridge.g5.oxford.qs'),
      t('oxbridge.g5.oxford.intl'),
      t('oxbridge.g5.oxford.admit'),
      t('oxbridge.g5.oxford.tuition')
    ]
  },
  {
    key: 'cambridge',
    name: t('oxbridge.g5.cambridge.name'),
    stats: [
      t('oxbridge.g5.cambridge.qs'),
      t('oxbridge.g5.cambridge.intl'),
      t('oxbridge.g5.cambridge.admit'),
      t('oxbridge.g5.cambridge.tuition')
    ]
  },
  {
    key: 'ucl',
    name: t('oxbridge.g5.ucl.name'),
    stats: [
      t('oxbridge.g5.ucl.qs'),
      t('oxbridge.g5.ucl.intl'),
      t('oxbridge.g5.ucl.admit'),
      t('oxbridge.g5.ucl.tuition')
    ]
  },
  {
    key: 'imperial',
    name: t('oxbridge.g5.imperial.name'),
    stats: [
      t('oxbridge.g5.imperial.qs'),
      t('oxbridge.g5.imperial.intl'),
      t('oxbridge.g5.imperial.admit'),
      t('oxbridge.g5.imperial.tuition')
    ]
  },
  {
    key: 'lse',
    name: t('oxbridge.g5.lse.name'),
    stats: [
      t('oxbridge.g5.lse.qs'),
      t('oxbridge.g5.lse.intl'),
      t('oxbridge.g5.lse.admit'),
      t('oxbridge.g5.lse.tuition')
    ]
  }
];
---

<Layout title={`${t('nav.oxbridge')} - ${brand}`}>
  <section class="relative">
    <figure class="w-full">
      <img src={heroBanner} alt={heroAlt} class="w-full h-auto" loading="eager" />
    </figure>
  </section>

  <section class="py-20 md:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid lg:grid-cols-2 gap-12 items-start">
      <div class="card card-border bg-base-100 shadow-md" style="animation: slideInFromLeft 0.6s ease-out both">
        <div class="card-body gap-4">
          <h2 class="text-2xl font-bold text-primary">{t('oxbridge.pains.title')}</h2>
          <ul class="space-y-3 text-sm sm:text-base opacity-80 leading-relaxed">
            {painPoints.map((item) => (
              <li class="flex items-start gap-3">
                <span class="text-primary mt-1">•</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
      <div class="card card-border bg-base-100 shadow-md" style="animation: slideInFromLeft 0.6s ease-out 0.2s both">
        <div class="card-body gap-4">
          <h2 class="text-2xl font-bold">{t('oxbridge.services.title')}</h2>
          <ul class="space-y-3 text-sm sm:text-base opacity-80 leading-relaxed">
            {services.map((service) => (
              <li class="flex items-start gap-3">
                <span class="text-primary mt-1">•</span>
                <span>{service}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 md:py-28 bg-base-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 space-y-12">
      <div class="text-center max-w-3xl mx-auto" style="animation: slideInFromLeft 0.6s ease-out both">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">{t('oxbridge.g5.title')}</h2>
        <p class="text-base sm:text-lg opacity-80 leading-relaxed">{t('oxbridge.g5.subtitle')}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 xl:grid-cols-none xl:flex xl:flex-wrap xl:justify-center xl:gap-8">
        {g5Universities.map((uni, index) => (
          <div class="card card-border bg-base-100 shadow-sm ring-1 ring-base-300/60 xl:w-[30%] xl:min-w-[260px]" style={`animation: slideInFromLeft 0.6s ease-out ${0.08 * index}s both`}>
            <div class="card-body space-y-4">
              <div class="flex items-start gap-3">
                <span class="w-10 h-10 rounded-full bg-primary/10 text-primary flex items-center justify-center font-semibold">
                  {index + 1}
                </span>
                <h3 class="text-lg font-semibold leading-tight">{uni.name}</h3>
              </div>
              <ul class="space-y-2 text-sm sm:text-base opacity-80 leading-relaxed">
                {uni.stats.map((stat) => (
                  <li class="flex items-start gap-2">
                    <span class="text-primary mt-1">•</span>
                    <span>{stat}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-base-200 py-20 md:py-28">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 space-y-10">
      <div class="text-center" style="animation: slideInFromLeft 0.6s ease-out both">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">{t('oxbridge.exams.title')}</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
        <div class="card card-border bg-base-100" style="animation: slideInFromLeft 0.6s ease-out both">
          <div class="card-body gap-3">
            <h3 class="text-xl font-semibold">Oxford</h3>
            <p class="text-sm opacity-80 leading-relaxed">{t('oxbridge.exams.oxford')}</p>
          </div>
        </div>
        <div class="card card-border bg-base-100" style="animation: slideInFromLeft 0.6s ease-out 0.1s both">
          <div class="card-body gap-3">
            <h3 class="text-xl font-semibold">Cambridge</h3>
            <p class="text-sm opacity-80 leading-relaxed">{t('oxbridge.exams.cambridge')}</p>
          </div>
        </div>
        <div class="card card-border bg-base-100" style="animation: slideInFromLeft 0.6s ease-out 0.2s both">
          <div class="card-body gap-3">
            <h3 class="text-xl font-semibold">G5</h3>
            <p class="text-sm opacity-80 leading-relaxed">{t('oxbridge.exams.g5')}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 md:py-28">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center space-y-10" style="animation: slideInFromLeft 0.6s ease-out both">
      <h2 class="text-3xl sm:text-4xl font-bold">{t('oxbridge.timeline.title')}</h2>
      <div class={`flex flex-col xl:flex-row gap-6 text-sm sm:text-base font-medium ${lang === 'zh-cn' ? 'items-start xl:items-center' : 'items-start xl:items-center'}`}>
        {timeline.map((step, index) => (
          <div class="flex items-center gap-4 w-full xl:w-auto">
            <div class="w-12 h-12 rounded-full bg-primary text-primary-content flex items-center justify-center font-semibold">
              {index + 1}
            </div>
            <span class={`opacity-80 ${lang === 'zh-cn' ? 'whitespace-nowrap' : 'whitespace-normal'}`}>
              {step}
            </span>
            {index < timeline.length - 1 && (
              <svg class="w-6 h-6 text-primary hidden xl:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.8" d="M9 5l7 7-7 7"></path>
              </svg>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
