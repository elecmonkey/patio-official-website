---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const contactItems = [
  {
    type: 'phone',
    label: t('about.contact.phoneLabel'),
    value: t('about.contact.phoneValue')
  },
  {
    type: 'email',
    label: t('about.contact.emailLabel'),
    value: t('about.contact.emailValue')
  },
  {
    type: 'location',
    label: t('about.contact.addressLabel'),
    value: t('about.contact.addressValue')
  }
];
---

<Layout title={`${t('nav.about')} - Training`}>
  <section class="bg-base-200 py-20 md:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16" style="animation: slideInFromLeft 0.6s ease-out">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6">
          {t('about.hero.title')}
        </h1>
        <p class="text-lg sm:text-xl max-w-3xl mx-auto opacity-80">
          {t('about.hero.subtitle')}
        </p>
      </div>

      <div class="space-y-16">
        <div class="card card-border bg-base-100 p-8 md:p-12" style="animation: slideInFromLeft 0.6s ease-out 0.2s both">
          <h2 class="text-3xl font-bold mb-6">{t('about.mission.title')}</h2>
          <p class="leading-relaxed text-lg">
            {t('about.mission.description')}
          </p>
        </div>

        <div class="card card-border bg-base-100 p-8 md:p-12" style="animation: slideInFromLeft 0.6s ease-out 0.4s both">
          <h2 class="text-3xl font-bold mb-6">{t('about.vision.title')}</h2>
          <p class="leading-relaxed text-lg">
            {t('about.vision.description')}
          </p>
        </div>

        <div class="card card-border bg-base-100 p-8 md:p-12" style="animation: slideInFromLeft 0.6s ease-out 0.6s both">
          <h2 class="text-3xl font-bold mb-6">{t('about.contact.title')}</h2>
          <div class="space-y-4">
            {contactItems.map((item) => (
              <p class="flex items-center">
                {item.type === 'phone' ? (
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                ) : item.type === 'email' ? (
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                ) : (
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                )}
                {item.label}: {item.value}
              </p>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
