---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const caseStudies = [1, 2, 3, 4];
---

<Layout title={`${t('nav.cases')} - Training`}>
  <section class="bg-base-200 py-20 md:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16" style="animation: slideInFromLeft 0.6s ease-out">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6">
          {t('cases.hero.title')}
        </h1>
        <p class="text-lg sm:text-xl max-w-3xl mx-auto opacity-80">
          {t('cases.hero.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {caseStudies.map((item, index) => (
          <div class="card card-border bg-base-100 p-8" style={`animation: slideInFromLeft 0.6s ease-out ${0.2 + index * 0.15}s both`}>
            <div class="flex items-start mb-4">
              <div class="w-16 h-16 bg-base-300 mr-4"></div>
              <div>
                <h3 class="text-xl font-bold">{`${t('cases.card.clientPrefix')} ${item}`}</h3>
                <p class="text-sm opacity-60">{t('cases.card.industry')}</p>
              </div>
            </div>
            <p class="opacity-80 leading-relaxed mb-4">
              {t('cases.card.description')}
            </p>
            <div class="flex space-x-8 text-sm">
              <div>
                <div class="text-2xl font-bold text-primary">85%</div>
                <div class="opacity-60">{t('cases.card.stat.skills')}</div>
              </div>
              <div>
                <div class="text-2xl font-bold text-primary">90%</div>
                <div class="opacity-60">{t('cases.card.stat.satisfaction')}</div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
