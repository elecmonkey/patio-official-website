---
import Layout from '@/layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={`${t('nav.solutions')} - Training`}>
  <section class="bg-base-200 py-20 md:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16" style="animation: slideInFromLeft 0.6s ease-out">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6">
          {t('solutions.hero.title')}
        </h1>
        <p class="text-lg sm:text-xl max-w-3xl mx-auto opacity-80">
          {t('solutions.hero.subtitle')}
        </p>
      </div>

      <div class="space-y-16">
        <div class="card card-border bg-base-100 p-8 md:p-12" style="animation: slideInFromLeft 0.6s ease-out 0.2s both">
          <h2 class="text-3xl font-bold mb-6">{t('solutions.enterprise.title')}</h2>
          <p class="opacity-80 mb-8 leading-relaxed">
            {t('solutions.enterprise.desc')}
          </p>
          <ul class="space-y-3">
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>{t('solutions.enterprise.feature1')}</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>{t('solutions.enterprise.feature2')}</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>{t('solutions.enterprise.feature3')}</span>
            </li>
          </ul>
        </div>

        <div class="card card-border bg-base-100 p-8 md:p-12" style="animation: slideInFromLeft 0.6s ease-out 0.4s both">
          <h2 class="text-3xl font-bold mb-6">{t('solutions.individual.title')}</h2>
          <p class="opacity-80 mb-8 leading-relaxed">
            {t('solutions.individual.desc')}
          </p>
          <ul class="space-y-3">
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>{t('solutions.individual.feature1')}</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>{t('solutions.individual.feature2')}</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>{t('solutions.individual.feature3')}</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>
