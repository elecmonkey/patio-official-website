---
import { ClientRouter } from 'astro:transitions';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getLangFromUrl } from '@/i18n/utils';
import '@/styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = '攀梯教育 · 国际课程与竞赛规划',
	description = '专注 A-Level、AP、IB、WACE 课程与国际竞赛辅导，提供个性化学习方案，助力学生冲刺世界名校。'
} = Astro.props;

const currentLang = getLangFromUrl(Astro.url);
const htmlLang = currentLang === 'en' ? 'en' : 'zh-CN';
---

<!doctype html>
<html lang={htmlLang} data-theme="corporate">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="bg-base-100 text-base-content antialiased">
		<Header />
		<main class="pt-16">
			<slot />
		</main>
		<Footer />
	</body>
</html>
