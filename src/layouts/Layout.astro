---
import { ClientRouter } from 'astro:transitions';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import FloatingActions from '@/components/FloatingActions';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import '@/styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const currentLang = getLangFromUrl(Astro.url);
const htmlLang = currentLang === 'en' ? 'en' : 'zh-CN';

const defaultMeta = {
	'zh-cn': {
		title: '攀梯国际 · 国际学科与竞赛规划',
		description: '专注 A-Level、AP、IB、WACE 国际学科与国际竞赛辅导，提供个性化学习方案，助力学生冲刺世界名校。'
	},
	en: {
		title: 'Patio Academy · International Subjects & Competition Planning',
		description: 'Personalized international subject pathways, competition coaching, and admissions planning from Patio Academy.'
	}
} as const;

const metaDefaults = defaultMeta[currentLang] ?? defaultMeta['zh-cn'];

const zhT = useTranslations('zh-cn');
const enT = useTranslations('en');

const floatingTexts = {
	'zh-cn': {
		phoneHref: 'tel:18061256544',
		phoneText: zhT('contact.info.phoneValue'),
		wechatLabel: zhT('floating.wechat'),
		backTopLabel: zhT('floating.backTop'),
		screenshotHint: zhT('floating.screenshotHint'),
		callHint: zhT('floating.callHint')
	},
	en: {
		phoneHref: 'tel:18061256544',
		phoneText: enT('contact.info.phoneValue'),
		wechatLabel: enT('floating.wechat'),
		backTopLabel: enT('floating.backTop'),
		screenshotHint: enT('floating.screenshotHint'),
		callHint: enT('floating.callHint')
	}
} as const;

const {
	title = metaDefaults.title,
	description = metaDefaults.description
} = Astro.props;
---

<!doctype html>
<html lang={htmlLang} data-theme="corporate">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="bg-base-100 text-base-content antialiased">
		<Header />
		<main class="pt-20">
			<slot />
		</main>
		<Footer />
		<FloatingActions client:load lang={currentLang} textsByLang={floatingTexts} />
	</body>
</html>
